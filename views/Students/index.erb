<div class="add_edit_form">
  <br>
  <h1>Student List</h1>
  <br>
  <p>This is a list of all the students currently</p>



  <table>
    <thead>

  <table class="table">
    <thead class="thead-dark">

      <tr>
        <th>Student ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Group</th>
      </tr>
    </thead>
    <% @students.each do |student| %>
    <tr>
      <td><a href="/students/<%= student.studentid %>"><%= student.studentid %></a></td>
      <td><a href="/students/<%= student.studentid %>"><%= student.firstname %></a></td>
      <td><a href="/students/<%= student.studentid %>"><%= student.lastname %></a></td>
      <td><a href="/<%= student.groupid %>"><%= student.groupname%></a></td>
    </tr>
    <% end %>
  </table>
</div>
