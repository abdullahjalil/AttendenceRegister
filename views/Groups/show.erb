
<div class="jumbotron">
  <h1 class="display-4"><%= @groups.groupname%></h1>
  <p class="lead">This is a simple attendance tracking application.</p>
  <hr class="my-4">
  <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="/students/generate_names" role="button">Fill Names</a>
  </p>
</div>

  <table id="myTable" class="table">
    <thead class="thead-dark">
      <tr>
        <th onclick="sortTable(0)" scope="col">Student ID</th>
        <th onclick="sortTable(1)" scope="col">First Name</th>
        <th onclick="sortTable(2)" scope="col">Last Name</th>
        <th scope="col">Group ID</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><a href="/students/<%= student.studentid %>"><%= student.studentid %></a></td>
        <td><a href="/students/<%= student.studentid %>"><%= student.firstname %></a></td>
        <td><a href="/students/<%= student.studentid %>"><%= student.lastname %></a></td>
        <td><a href="/students/<%= student.studentid %>"><%= student.groupid %></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
