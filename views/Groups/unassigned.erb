<div class="jumbotron">
  <h1 class="display-4"><%= @groups.grouptype %> Students</h1>
  <hr class="my-4">
</div>

  <table id="studentTable" class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Student ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><a href="/students/<%= student.studentid %>"><%= student.studentid %></a></td>
        <td><a href="/students/<%= student.studentid %>"><%= student.firstname %></a></td>
        <td><a href="/students/<%= student.studentid %>"><%= student.lastname %></a></td>

      </tr>
      <% end %>
    </tbody>
  </table>
