<form class="" action="index.html" method="post">

  <!-- Changes from post to put if no id is present(whether entering a new student or not) -->
  <%# <% if @student.id%> %>
    <!-- <input type="hidden" name="_method" value="put"> -->
  <%# <% end %> %>

  <div class="form-group">
    <label>First Name: </label>
    <!-- Will fetch the first name if one is available -->
    <input type="text" name="first_name" value="<!--@student.first_name-->" placeholder="First Name">
  </div>

  <div class="form-group">
    <label>Last Name: </label>
    <!-- Will fetch the last name if one is available -->
    <input type="text" name="last_name" value="<!--@student.last_name-->" placeholder="Last Name">
  </div>

  <!-- Button will change depending on whether you're adding/editing student info -->
  <%# <% if !@student.id %> %>
    <div class="form-group">
      <input type="submit" value="Add Student">
    </div>
  <%# <% else %> %>
    <div class="form-group">
      <input type="submit" value="Save Changes">
    </div>
  <%# <% end %> %>
</form>
