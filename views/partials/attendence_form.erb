    <label>Status: </label>
    <!-- Will fetch the student ID -->
    <input type="text" name="status" value="<!--@student.attendance-->" placeholder="Student ID">
  </div>

  <!-- Button will change depending on whether you're adding/editing attendance info -->
  <%# <% if !@student.id %> %>
    <div class="form-group">
      <input type="submit" value="Submit Attendance">
    </div>
  <%# <% else %> %>
